<div class="container mt-5" style="width: 30%">
    <div class="card mb-5">
        <div class="card-header text-center">Registre un prestamo</div>
        <div class="card-body">
            <form action="/interfaz3.hbs" method="post" id="caja-registro">
                            <div class="input-group mb-3">
                                <select name="cliente" id="cliente" class="form-select">
                                    <option value="0" selected disabled>
                                        Seleccione el cliente
                                    </option>
                                    {{#each cliente}}
                                        <option value="{{ident}}">{{nombre}}
                                            </option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <select name="bibliotecario" id="bibliotecario" class="form-select">
                                    <option value="0" selected disabled>
                                        Seleccione al bibliotecario
                                    </option>
                                    {{#each bibliotecario}}
                                        <option value="{{ident}}">{{apellido}}
                                            </option>
                                    {{/each}}
                                </select>

                            </div>
                            <div class="input-group mb-3">
                                <select name="ejemplar" id="ejemplar" class="form-select">
                                    <option value="0" selected disabled>
                                        Seleccione el ejemplar
                                    </option>
                                    {{#each ejemplar}}
                                        <option value="{{ident}}">{{codigo}}
                                            </option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <label for="">Ingrese la fecha de prestamo</label>
                            </div>                                          
                            <div class="input-group mb-3">
                                <input name="fecha_prestamo" id="fecha_prestamo" type="text" class="form-control" placeholder="dd-mm-aaaa" required>
                            </div>    
                            <div class="input-group mb-3">
                                <label for="">Ingrese la fecha de entrega</label>
                            </div>                                      
                            <div class="input-group mb-3">      
                                <input name="fecha_entrega" id="fecha_entrega" type="text" class="form-control" placeholder="dd-mm-aaaa" required>
                            </div>            
                            <div class="input-group mb-3">                    
                                <input name="costo_prestamo" id="costo_prestamo" type="text" class="form-control" placeholder="Ingrese el valor del prestamo" required>
                            </div>
                                                        
                            <div class="text-center">
                                <button
                                    type="submit"
                                    class="btn btn-primary"
                                >
                                    Registrar prestamo
                                </button>
                            </div>
            </form>
        </div>
    </div>
</div>